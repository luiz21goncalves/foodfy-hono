{
  "name": "foodfy-hono",
  "version": "0.0.0",
  "scripts": {
    "dev": "bun --env-file=.env.development run --hot src/server.ts",
    "build": "bun build src/server.ts --outdir dist --minify --format esm --splitting --target bun",
    "start": "bun run dist/server.js",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "drizzle-orm": "0.31.2",
    "hono": "4.4.7",
    "pg": "8.12.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@types/bun": "latest",
    "@types/pg": "8.11.6",
    "drizzle-kit": "0.22.7",
    "husky": "9.0.11",
    "lint-staged": "15.2.7"
  }
}
